{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "types": [
      "koa",
      "koa-router",
      "astroboy",
      "node"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}